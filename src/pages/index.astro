---
import { Image } from 'astro:assets'

import { Quote } from 'astro-pure/advanced'
import { PostPreview } from 'astro-pure/components/pages'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button, Card, Icon, Label } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import ProjectCard from '@/components/home/ProjectCard.astro'
import Section from '@/components/home/Section.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import config from '@/site-config'

const languages = [
  'Python', 
  'R', 
  'SQL', 
  'C#',
  'JavaScript', 
  'Shell/Bash'
];

const aiAndData = [
  'ETL Pipelines',
  'Data Visualization',
  'Machine Learning',
  'Prompt Engineering', 
];

const cloudAndSec = [
  'AWS',
  'Azure', 
  'Linux', 
  'Network Security'
];

const webDevelopment = [
  'HTML & CSS', 
  'PHP', 
  'TypeScript', 
  'Astro', 
  'React/Vite' 
];

const MAX_POSTS = 10
const allPosts = await getBlogCollection()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)

const imagePath = config.logo.src
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/*.{jpeg,jpg,png,gif,avif,webp}'
)
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,avif,webp}"`
  )
---

<PageLayout meta={{ title: 'Home' }} highlightColor='#659EB9'>
  <main class='flex w-full flex-col items-center'>
    <section class='animate mb-10 flex flex-col items-center gap-y-7' id='content-header'>
      <Image
        src={images[imagePath]()}
        alt={config.logo.alt || 'Logo'}
        class='h-28 w-auto rounded-full border p-1'
        loading='eager'
        fetchpriority='high'
      />

      <div class='flex flex-col items-center gap-y-4'>
        <h1 class='text-3xl font-bold'>
          <span class='block sm:hidden'>Mochammad Farros F. R.</span>
          <span class='hidden sm:block'>{config.author}</span>
        </h1>
        <div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
          <Label
            title='GitHub'
            as='a'
            href='https://github.com/farrosfr'
            target='_blank'
          >
            <Icon name='github' class='size-5' slot='icon' />
          </Label>
          
          <Label
            title='LinkedIn'
            as='a'
            href='https://www.linkedin.com/in/farrosfr/' 
            target='_blank'
          >
            <Icon name='link' class='size-5' slot='icon' />
          </Label>

  
          <Label
            title='Email Me'
            as='a'
            href='mailto:hello@farrosfr.com'
            target='_blank'
          >
            <Icon name='email' class='size-5' slot='icon' />
          </Label>
        </div>
      </div>

      
    </section>

    <div id='content' class='animate flex flex-col gap-y-10 md:w-4/5 lg:w-5/6'>
      <Section title='About'>
        <p class='text-muted-foreground'>Full-Stack Web Engineer & Red Team Practitioner</p>
        <p class='text-muted-foreground'>
          Building high-performance, scalable web systems across the stack.
          On the security side, focused on offensive techniques, real-world attack surfaces,
          and breaking systems to understand how to build them better.
          This blog documents architecture decisions, security insights, and practical experiments.
        </p>
        <Button title='More about me' class='w-fit self-end' href='/about' variant='ahead' />
      </Section>
      {
        allPostsByDate.length > 0 && (
          <Section title='Posts'>
            <ul class='flex flex-col gap-y-1.5 sm:gap-y-2'>
              {allPostsByDate.map((p) => (
                <li class='flex flex-col gap-x-2 sm:flex-row'>
                  <PostPreview post={p} />
                </li>
              ))}
            </ul>
            <Button title='More posts' class='w-fit self-end' href='/blog' variant='ahead' />
          </Section>
        )
      }

      {
        <Section title='Experience'>
        <Card
          heading='System Architect'
          subheading='Solar Nusantara'
          date='Jan 2026 - Present'
        >
          <ul class='ms-4 list-disc text-muted-foreground space-y-2'>
            <li>
              Leading web architecture, infrastructure, and platform scalability across multiple websites.
            </li>
            <li>
              Designing high-performance marketing sites using Astro with strong SEO and Core Web Vitals optimization.
            </li>
          </ul>
        </Card>

        <Card
          heading='IT Engineer'
          subheading='Solar Nusantara'
          date='Sep 2023 - Dec 2025'
        >
          <ul class='ms-4 list-disc text-muted-foreground space-y-2'>
            <li>
              Managed servers, email systems, and internal infrastructure (Linux / VPS environments).
            </li>
            <li>
              Maintained and optimized company websites and digital platforms.
            </li>
            <li>
              Handled deployment workflows, DNS configuration, and production troubleshooting.
            </li>
          </ul>
        </Card>

        <Card
          heading='Cybersecurity Writer'
          subheading='Medium (Self-employed)'
          date='Sep 2023 - Present'
        >
          <ul class='ms-4 list-disc text-muted-foreground space-y-2'>
            <li>
              Publishing hands-on write-ups on web vulnerabilities, CVE analysis, and red team methodology.
            </li>
            <li>
              Exploring offensive security techniques and documenting practical findings.
            </li>
          </ul>
        </Card>
      </Section>
      
      }
      <Section title='Education'>
        <Card
          heading="Statistics"
          subheading="Sepuluh Nopember Institute of Technology"
          date="Aug 2015 - Sep 2019"
        >
          <ul class="ms-4 list-disc text-muted-foreground">
            <li>
              Published thesis: <a href="https://doi.org/10.12962/j27213862.v2i2.6824" target="_blank"><em>"Topic Discovery on Abstract Documents of Research Journals from ScienceDirect Using Association Rule"</em></a>.
            </li>
          </ul>
        </Card>      
      </Section>

      <Section title='Website List'>
        <div class='grid grid-cols-1 gap-3 sm:grid-cols-2'>
          <ProjectCard
            href='https://aesi.or.id'
            heading='AESI'
            subheading='Asosiasi Energi Surya Indonesia'
            imagePath='/src/assets/projects/aesi.png'
          />
          <ProjectCard
            href='https://aurora-nutrima.id'
            heading='Aurora Nutrima'
            subheading='B2B Industrial Catering Services'
            imagePath='/src/assets/projects/aurora.png'
          />
          <ProjectCard
            href='https://sonus-epc.id'
            heading='Sonus EPC'
            subheading='Electrical & Solar EPC Services'
            imagePath='/src/assets/projects/sonus-epc.png'
          />
          <ProjectCard
            href='https://solar-nusantara.id'
            heading='Solar Nusantara'
            subheading='Renewable Energy EPC & Solutions'
            imagePath='/src/assets/projects/sonus.png'
          />
          <ProjectCard
            href='https://sonus-hub.id'
            heading='SonusHUB'
            subheading='B2B Marketplace for Electrical & Solar'
            imagePath='/src/assets/projects/sonushub.png'
          />
          <ProjectCard
            href='/projects'
            heading='More projects'
            subheading='Check out more projects'
            imagePath='/src/assets/projects/4.jpg'
          />
        </div>
      </Section>

      <Section title='Certifications'>
        <Card
          as='a'
          heading='Continuous Learning'
          subheading='Exploring various domains including Cybersecurity, AI, Data Science, Cloud, and Web Development, complemented by a collection of certifications.'
          date='2017 - Present'
          href='/about#certificates'
        />
      </Section>

      <Section title='Skills'>
        <SkillLayout title='Programming' skills={languages} />
        <SkillLayout title='AI & Data Science' skills={aiAndData} />
        <SkillLayout title='Cloud & Security' skills={cloudAndSec} />
        <SkillLayout title='Web Development' skills={webDevelopment} />
      </Section>
    </div>
    {/* <Quote class='mt-12' /> */}
  </main>
</PageLayout>
